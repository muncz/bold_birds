#!/bin/bash
WHO ARE YOU: espeak "i am your personal assistent"
HI: espeak "hello"
HELLO: espeak "hi"
BUY A CAR: espeak "black, white or yellow?"
BLACK: espeak "ok, i will search for black car" && touch preferences.txt && echo "black" > preferences.txt
YELLOW: espeak "ok, yellow is nice colour" && echo "yellow" > preferences.txt
WHITE: espeak "ok, white is good for you, i think" && echo "white" > preferences.txt
FUCK YOU: espeak "fuck you too!"
